# Environment variables for the ESL Dictionary Builder project

# AWS Configuration
AWS_PROFILE=eslbuilder
AWS_REGION=us-west-2

# Dictionary API Configuration
DICTIONARY_API_KEY=your_dictionary_api_key_here

# Database Configuration
DATABASE_PATH=Dictionary.sqlite
API_USAGE_FILE=api_usage.txt

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Export Settings
EXPORT_DIRECTORY=DictionaryAppExport
DEFAULT_APP_NAME=DictionaryApp

# AWS Secrets Manager (optional - can use instead of direct API key)
AWS_SECRET_NAME=esl-writer

# Optional: OpenAI API for additional features
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL = "gpt-4o-mini-tts"
OPENAI_VOICE = "alloy"
# Development Settings
SKIP_EXISTING_WORDS=true
MAX_API_CALLS_PER_RUN=1000


