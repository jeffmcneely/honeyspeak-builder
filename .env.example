# Environment variables for the ESL Dictionary Builder project

# Dictionary API Configuration
DICTIONARY_API_KEY=your_dictionary_api_key_here

# Storage Configuration
STORAGE_HOME=/data
STORAGE_DIRECTORY=/data/honeyspeak
DATABASE_PATH=/data/honeyspeak/Dictionary.sqlite
ASSET_DIRECTORY=/data/honeyspeak/assets_hires
PACKAGE_DIRECTORY=/data/honeyspeak/assets
API_USAGE_FILE=api_usage.txt

# Flask Configuration
FLASK_SECRET_KEY=supersecret

# Celery/Redis Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini-tts
OPENAI_VOICE=alloy

# Development Settings
SKIP_EXISTING_WORDS=true
MAX_DICTIONARY_API_CALLS_PER_RUN=1000

# Kubernetes Storage Settings (for upstart.sh)
STORAGE_MOUNT_PATH=/data
STORAGE_SIZE=10Gi
STORAGE_ACCESS_MODE=ReadWriteOnce
STORAGE_SERVER=your_smb_server
STORAGE_SHARE=your_smb_share
STORAGE_USERNAME=your_username
STORAGE_PASSWORD=your_password

COPYTO_DIRECTORY=/path/to/your/project